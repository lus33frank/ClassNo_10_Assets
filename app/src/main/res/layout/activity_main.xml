<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tw.com.frankchang.houli.classno_10_assets.MainActivity"
    android:orientation="vertical"
    android:padding="@dimen/Padding">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Height_0"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_weight="1"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/Height_0"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="@string/Hint_Text"
                android:textSize="@dimen/TextSize_20"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="@dimen/Width_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/load_jpg"
            android:textSize="@dimen/TextSize_20"
            android:onClick="imgOnClick"
            android:layout_marginLeft="@dimen/MarginLeft_10"
            android:layout_marginRight="@dimen/MarginRight_10"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="@dimen/Width_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/load_txt"
            android:textSize="@dimen/TextSize_20"
            android:onClick="txtOnClick"
            android:layout_marginLeft="@dimen/MarginLeft_10"
            android:layout_marginRight="@dimen/MarginRight_10"/>
    </LinearLayout>
</LinearLayout>
